<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.FirstPage">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center">
            <Entry x:Name="LoginField" Placeholder="Логин" 
                   TextColor="Black" PlaceholderColor="Gray"/>
            <Entry x:Name="PasswordField" IsPassword="True" 
                   Placeholder="Пароль" TextColor="Black" 
                   PlaceholderColor="Gray"/>
            <Button x:Name="LoginBtn"
                    Text="Войти"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#025464"
                    CornerRadius="50"
                    Clicked="LoginButton_Clicked">
            </Button>
            <Button x:Name="RegistrationBtn"
                    Text="Регистрация"
                    TextColor="#025464"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    BorderColor="#025464"
                    BorderWidth="1.5"
                    CornerRadius="50"
                    Clicked="RegistrationButton_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>